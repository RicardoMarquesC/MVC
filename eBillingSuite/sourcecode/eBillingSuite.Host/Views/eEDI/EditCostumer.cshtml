@model eBillingSuite.ViewModels.EEDICostumersVM
@{
	var uniqueID = "eedicostumer-modal";
}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	<h4 class="modal-title">@this.Get(DictionaryEntryKeys.EDICostumerAdd)</h4>
</div>
<div class="modal-body">
	<form id="doc-edit-form"
		  action="@Url.Action("EditCostumer", "eEDI")"
		  method="post"
		  class="form-horizontal">

		<div class="tab-content">
			<div id="@uniqueID-details" class="tab-pane fade in active">
				@Html.HiddenFor(e => e.PKID)
				@Html.HiddenFor(e => e.FKInstanciaID)
				<div class="row">
					@Html.PixelAdminTextBoxWithColFor(e => e.Nome, 8, null, InputOptions.Default)
					@Html.PixelAdminTextBoxWithColFor(e => e.NIF, 4, null, InputOptions.Default)
				</div>
				<div class="row">
					@Html.PixelAdminTextBoxWithColFor(e => e.URL, 12, null, InputOptions.Default)
				</div>
				<div class="row">
					@Html.PixelAdminTextBoxWithColFor(e => e.TempoEspera, 8, null, InputOptions.Default)
					@Html.PixelAdminSelectWithColFor(e => e.TempoEsperaUnidade, Model.AvailableTypes, 4, null, InputOptions.Default)
				</div>
				<div class="row">
					@Html.PixelAdminTextBoxWithColFor(e => e.Tentativas, 4, null, InputOptions.Default)
					@Html.PixelAdminTextBoxWithColFor(e => e.Intervalo, 4, null, InputOptions.Default)
					@Html.PixelAdminSelectWithColFor(e => e.IntervaloUnidade, Model.AvailableTypes, 4, null, InputOptions.Default)
				</div>
			</div>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-primary" data-rel="submit" data-form="doc-edit-form">@Texts.Submit</button>
	<button type="button" class="btn btn-default" data-dismiss="modal">@Texts.Close</button>
</div>
