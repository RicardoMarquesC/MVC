@*@model eBillingSuite.Model.Desmaterializacao.InstancesMail*@
@model eBillingSuite.Models.DigitalMailData
@{
    var uniqueID = "edigitalMail-modal";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">@Texts.DigitalMailCreate</h4>
</div>
<div class="modal-body">
    <form id="doc-edit-form"
          action="@Url.Action("CreateInstanceMailS", "eDigital")"
          method="post"
          class="form-horizontal">
        <div class="tab-content">
            <div id="@uniqueID-details" class="tab-pane fade in active">
                @Html.HiddenFor(e => e.id)
                <div class="row">
                    @Html.PixelAdminTextBoxWithColFor(e => e.nameAccount, 6, null, InputOptions.Default, Texts.EmailName)
                </div>
                <div class="row">
                    @Html.PixelAdminTextBoxWithColFor(e => e.email, 12, null, InputOptions.Default, Texts.EmailAddress)
                </div>
                <div class="row">
                    @Html.PixelAdminTextBoxWithColFor(e => e.serverURL, 12, null, InputOptions.Default, Texts.ServerURL)
                </div>
                <div class="row">
                    @Html.PixelAdminSelectWithColFor(e => e.serverType, Model.protocolReception, 6, null, InputOptions.Default, Texts.protocolReceptionList)
                    @Html.PixelAdminTextBoxWithColFor(e => e.serverPort, 6, null, InputOptions.Default, Texts.port)
                </div>
                <div class="row">
                    @Html.PixelAdminTextBoxWithColFor(e => e.serverUsername, 6, null, InputOptions.Default, Texts.Username)
                    @Html.PixelAdminPasswordWithColFor(e => e.serverPassword, 6, null, InputOptions.Default, Texts.Password)
                </div>
                <div class="row">
                    @Html.PixelAdminSelectWithColFor(e => e.instance, Model.instancesList, 6, null, InputOptions.Default, Texts.InstancesList)
                    @Html.PixelAdminSwitcherWithColFor(e => e.isSSL, 6, null, InputOptions.Default, Texts.isSSL)
                </div>
                <div class="row">
                    @Html.PixelAdminTextBoxWithColFor(e => e.obs, 12, null, InputOptions.Default, Texts.Obs)
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-rel="submit" data-form="doc-edit-form">@Texts.Submit</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">@Texts.Close</button>
</div>