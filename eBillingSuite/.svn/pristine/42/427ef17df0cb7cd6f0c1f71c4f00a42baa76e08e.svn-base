@model eBillingSuite.ViewModels.EBCTXTInboundConfigsVM
@{
	var uniqueID = "econnectorEditConfigInboundTXT-modal";
}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	<h4 class="modal-title">@Texts.ConnectorConfiInboundTXTAdd)</h4>
</div>
<div class="modal-body">
	<form id="doc-edit-form"
		  action="@Url.Action("EditTXTInboundConfigs", "eConnectorConfigs")"
		  method="post"
		  class="form-horizontal">
		<div class="tab-content">
			<div id="@uniqueID-details" class="tab-pane fade in active">
				@Html.HiddenFor(e => e.pkid)
				@Html.HiddenFor(e => e.FKInstanceID)
				<div class="row">
					@Html.PixelAdminSelectWithColFor(e => e.InboundPacketPropertyName, Model.AvailableFields, 3, null, InputOptions.Default, Texts.NomeCampo)
					@Html.PixelAdminTextBoxWithColFor(e => e.posicaoTxt, 3, null, InputOptions.Default, Texts.Posicao)					
					@Html.PixelAdminSelectWithColFor(e => e.tipo, Model.AvailableInvoiceRegionTypes, 3, null, InputOptions.Default, Texts.ListAvailableInvoiceRegionTypes)
				</div>
			</div>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-primary" data-rel="submit" data-form="doc-edit-form">@Texts.Submit)</button>
	<button type="button" class="btn btn-default" data-dismiss="modal">@Texts.Close)</button>
</div>

